    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-label">Thêm mới thể loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="book-code" class="col-form-label">Mã sách</label>
                        <input type="text" class="form-control" name="code" id="book-code">
                    </div>
                    <div class="form-group">
                        <label for="book-name" class="col-form-label">Tên sách</label>
                        <input type="text" class="form-control" name="name" id="book-name">
                    </div>
                    <div class="form-group">
                        <label for="source" class="col-form-label">Nguồn</label>
                        <input type="text" class="form-control" id="source" name="source">
                    </div>
                    <div class="form-group">
                        <label for="state" class="col-form-label">Tình trạng</label>
                        <select name="state" class="form-control">
                            <option value="">Không chọn</option>
                            <option value="FULL">Đã full</option>
                            <option value="NOT FULL">Cập nhật thêm</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tên thể loại</label>
                        <select name="categoryOId" class="form-control categories"></select>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tên tác giả</label>
                        <select name="authorOId" class="form-control authors"></select>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Mô tả</label>
                        <textarea class="form-control" name="description" id="description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save">Save</button>
            </div>
